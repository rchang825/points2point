<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Loyalty programs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Loyalty programs</h1>
    <%= link_to "New loyalty program", new_loyalty_program_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="loyalty_programs" class="min-w-full">
    <% @loyalty_programs.each do |loyalty_program| %>
      <%= render loyalty_program %>
      <p>
        <%= link_to "Show this loyalty program", loyalty_program, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
